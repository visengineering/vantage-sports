{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "types": ["node"],
    "strictNullChecks": true
    // TODOs for future below:
    // "allowSyntheticDefaultImports": true,
    // "noEmit": true,
    // "strict": true,
    // "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": true,
    // "resolveJsonModule": true,
  },
  "include": ["src", "api", "config", "scripts", "test", "types"],
  "exclude": [
    "node_modules",
    "logs",
    "test",
    "api/static-client",
    "api/db/compiled"
  ],
  "files": ["./types/global.d.ts"]
}
